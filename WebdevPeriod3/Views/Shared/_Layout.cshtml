<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebdevPeriod3</title>
    <link rel="stylesheet" href="~/css/app.min.css" />
</head>
<body class="App flex flex-col h-screen">
    <header>
        <nav class="flex items-center justify-between flex-wrap bg-yellow-800 h-auto p-4 w-full z-10 pin-t">
            <div class="flex items-center flex-no-shrink text-white mr-6">
                <a class="text-white no-underline hover:text-white hover:no-underline" href="#">
                    <img src="~/images/bb-8.png" width="40" height="40" alt="logo" />
                </a>
            </div>
            <div class="block lg:hidden">
                <button id="nav-toggle" class="flex items-center px-3 py-2 border rounded text-grey border-grey-dark focus:outline-none hover:text-white hover:border-white">
                    <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" /></svg>
                </button>
            </div>
            <div class="w-full lg:flex-grow lg:flex lg:items-center lg:w-auto lg:block pt-6 lg:pt-0 lg:visible hidden">
                <ul class="list-reset lg:flex justify-end flex-1 items-center">
                    <li class="dropdown relative inline-block text-white no-underline">
                        <button href="#" class="inline-block p-3 text-gray-300 hover:text-gray-100 focus:outline-none" id="dropdown">Dropdown</button>
                        <div class="bg-yellow-800 hidden absolute p-1 shadow-lg z-10" id="dropdown-content">
                            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="inline-block p-3 text-gray-300 hover:text-gray-100">Privacy</a>
                            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="inline-block p-3 text-gray-300 hover:text-gray-100">Privacy</a>
                            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="inline-block p-3 text-gray-300 hover:text-gray-100">Privacy</a>
                            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="inline-block p-3 text-gray-300 hover:text-gray-100">Privacy</a>
                        </div>
                    </li>

                    <li class="mr-1">
                        <a asp-area="" asp-controller="Home" asp-action="Dashboard" class="inline-block p-3 text-gray-300 hover:text-gray-100">Dashboard</a>
                    </li>
                    <li class="mr-1">
                        <a asp-area="" asp-controller="Home" asp-action="Login" class="inline-block p-3 text-gray-300 hover:text-gray-100">Login</a>
                    </li>
                    <li class="mr-1">
                        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="inline-block p-3 text-gray-300 hover:text-gray-100">Logout</a>
                    </li>
                    <li class="mr-1">
                        <button class="text-gray-300 hover:text-gray-100 flex focus:outline-none">
                            <span class="mr-1">Username</span>
                            <img class="h-6 rounded-full"
                                 src="https://avatars2.githubusercontent.com/u/24622175?s=60&amp;v=4">
                        </button>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <aside class="hidden fixed min-w-max w-1/2 top-0 left-0 h-screen bg-yellow-800 z-10 flex select-none lg:hidden" id="side-nav">
        <div class="flex flex-col w-full">
            <li class="w-full flex p-2 hover:bg-yellow-700">
                <a asp-area="" asp-controller="Home" asp-action="Login" class="inline-block w-full p-3 text-gray-300 hover:text-gray-100">
                    <span class="flex flex-row ">
                        <img class="mr-2 rounded-full" src="https://avatars2.githubusercontent.com/u/24622175?s=60&amp;v=4" alt="needle icon" height="20" width="20"></img>
                        <span class="text-gray-300 hover:text-gray-100">Username</span>
                    </span>
                </a>
            </li>
            <li class="w-full flex p-2 hover:bg-yellow-700">
                <a asp-area="" asp-controller="Home" asp-action="Dashboard" class="inline-block w-full p-3 text-gray-300 hover:text-gray-100">
                    <span class="flex flex-row ">
                        <span class="text-gray-300 hover:text-gray-100">Dashboard</span>
                    </span>
                </a>
            </li>
            <li class="w-full flex p-2 hover:bg-yellow-700">
                <a asp-area="" asp-controller="Home" asp-action="Login" class="inline-block w-full p-3 text-gray-300 hover:text-gray-100">
                    <span class="flex flex-row">
                        <span class="text-gray-300 hover:text-gray-100">Login</span>
                    </span>
                </a>
            </li>
            <li class="w-full flex p-2 hover:bg-yellow-700">
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="inline-block w-full p-3 text-gray-300 hover:text-gray-100">
                    <span class="flex flex-row ">
                        <span class="text-gray-300 hover:text-gray-100">Logout</span>
                    </span>
                </a>
            </li>
        </div>
    </aside>
    <main role="main" class="flex flex-col h-full overflow-y-auto bg-gray-100">
        <div class="flex flex-col min-h-full h-full p-5">
                @RenderBody()
        </div>
    </main>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
