<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebdevPeriod3</title>
    <link rel="stylesheet" href="~/css/app.min.css" />
</head>
<body class="App flex flex-col h-screen">
    <header>
        @Html.Partial("_NavBar")
    </header>
    <aside class="hidden fixed min-w-max w-1/2 top-0 left-0 h-screen bg-yellow-800 z-10 flex select-none lg:hidden" id="side-nav">
        <div class="flex flex-col w-full">
            <li class="w-full flex p-2 hover:bg-yellow-700">
                <a asp-area="" asp-controller="Home" asp-action="Login" class="inline-block w-full p-3 text-gray-300 hover:text-gray-100">
                    <span class="flex flex-row ">
                        <img class="mr-2 rounded-full" src="https://avatars2.githubusercontent.com/u/24622175?s=60&amp;v=4" alt="needle icon" height="20" width="20"></img>
                        <span class="text-gray-300 hover:text-gray-100">Username</span>
                    </span>
                </a>
            </li>
            <li class="w-full flex p-2 hover:bg-yellow-700">
                <a asp-area="" asp-controller="Dashboard" asp-action="Index" class="inline-block w-full p-3 text-gray-300 hover:text-gray-100">
                    <span class="flex flex-row ">
                        <span class="text-gray-300 hover:text-gray-100">Dashboard</span>
                    </span>
                </a>
            </li>
            <li class="w-full flex p-2 hover:bg-yellow-700">
                <a asp-area="" asp-controller="Home" asp-action="Login" class="inline-block w-full p-3 text-gray-300 hover:text-gray-100">
                    <span class="flex flex-row">
                        <span class="text-gray-300 hover:text-gray-100">Login</span>
                    </span>
                </a>
            </li>
            <li class="w-full flex p-2 hover:bg-yellow-700">
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="inline-block w-full p-3 text-gray-300 hover:text-gray-100">
                    <span class="flex flex-row ">
                        <span class="text-gray-300 hover:text-gray-100">Logout</span>
                    </span>
                </a>
            </li>
        </div>
    </aside>
    <main role="main" class="flex flex-col h-full overflow-y-auto bg-gray-100">
        <div class="flex flex-col min-h-full h-full p-5">
                @RenderBody()
        </div>
    </main>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
